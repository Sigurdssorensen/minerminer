<script> setInterval(function(){self.location.reload()},5000) </script>

<!-- Script to run timer -->
<script>
    let timeElem = $(".timer span");
    timeElem.css("color", "white");

    let timer = timeElem.html();
    setInterval(function(){ timer--; if(timer>=0) { timeElem.html(timer)}}, 1000);
</script>
